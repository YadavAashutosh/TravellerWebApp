@model TravellerWebApp.Models.Destination

@{
    ViewData["Title"] = Model.Title;
}

<div class="row mt-4">
    <div class="col-md-6">
        <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Title" />
    </div>

    <div class="col-md-6">
        <h2>@Model.Title</h2>
        <p><strong>Location:</strong> @Model.Location</p>
        <p>@Model.Description</p>
        <p><strong>Price per person:</strong> ₹@Model.PricePerPerson</p>

        <a asp-controller="Bookings"
           asp-action="Create"
           asp-route-destinationId="@Model.Id"
           class="btn btn-primary">
            Book Now
        </a>

        <a asp-controller="Destinations"
           asp-action="Index"
           class="btn btn-outline-secondary ms-2">
            Back
        </a>
    </div>
</div>
